<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="uk.gov.hmrc.play.logging.JsonEncoder"/>
    </appender>

    <logger name="uk.gov" level="${logger.uk.gov:-WARN}"/>
    <logger name="application.controllers.actions" level="${logger.connector:-WARN}"/>
    <logger name="application.controllers.actions.HeaderLoggingAction" level="${logger.connector:-INFO}"/>
    <logger name="application.connectors" level="${logger.connector:-DEBUG}"/>

    <root level="${logger.application:-WARN}">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
